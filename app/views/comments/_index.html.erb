<% comments.each do |comment| %>
	<% unless comment.id.nil? %>
  		<p><%= link_to "#{comment.user.name}さん:", user_path(comment.user.id) %> <%= comment.content %> <span style='color:#9d9d9d;'>(<%=  time_ago_in_words(comment.created_at)%>前)</span>
   	 		<% if comment.user == current_user %>
      			<%= link_to '❎', picture_comment_path(comment.picture_id, comment.id), method: :delete, remote: true %>
    			<% end %>
    		<% end %>
    	</p>
<% end %>